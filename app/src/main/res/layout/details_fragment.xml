<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mDetailsViewModel"
            type="com.iti.elfarsisy.mad41.newsly.features.details.viewmodel.ArticleDetailsViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.details.ui.ArticleDetailsFragment">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="24dp">

            <ImageView
                android:id="@+id/imageView2"
                articleImage="@{mDetailsViewModel.articleLiveData.urlToImage}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".2"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{mDetailsViewModel.articleLiveData.title}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Tesla now accepts Bitcoin in the US" />

                <TextView
                    android:id="@+id/authortextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{mDetailsViewModel.articleLiveData.author}"
                    android:textSize="14sp"
                    tools:text="Yasmine Ghazy" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{mDetailsViewModel.articleLiveData.description}"
                    android:textSize="14sp"
                    tools:text="Description" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{mDetailsViewModel.articleLiveData.publishedAt}"
                    android:textSize="14sp"
                    tools:text="publish" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>



</layout>