<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mHomeViewModel"
            type="com.iti.elfarsisy.mad41.newsly.features.home.viewmodel.HomeViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".features.home.ui.HomeFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/homeRecyclerView"
            newsDataset="@{mHomeViewModel.newsResponseLive.articles}"
            viewModel="@{mHomeViewModel}"
            android:orientation="vertical"
            tools:listitem="@layout/home_news_item" />
    </LinearLayout>
</layout>